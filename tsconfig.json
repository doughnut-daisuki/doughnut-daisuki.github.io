{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  // コンパイルに関するオプションを設定
  "compilerOptions": {
    "target": "es5", 
    "module": "es2015",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "composite": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  }
}
